<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="258.0" prefWidth="420.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.controllers.AddMovieController">
    <children>
        <Label layoutX="136.0" layoutY="14.0" prefHeight="50.0" prefWidth="250.0" text="Create new movie" textAlignment="CENTER" wrapText="true">
            <font>
                <Font size="17.0" />
            </font>
        </Label>
        <TextField fx:id="movieName" layoutX="135.0" layoutY="64.0" promptText="Movie Name" />
      <TextField fx:id="movieCast" layoutX="135.0" layoutY="103.0" promptText="Movie Cast" />
      <TextField fx:id="movieDescription" layoutX="135.0" layoutY="143.0" promptText="Movie Description" />
      <TextField fx:id="fileName" layoutX="135.0" layoutY="181.0" promptText="File Name(ex. smthn.mp4)" />
      <Button fx:id="cancelButton" layoutX="37.0" layoutY="218.0" mnemonicParsing="false" text="Cancel" onAction="#close"/>
      <Button fx:id="submitButton" layoutX="334.0" layoutY="218.0" mnemonicParsing="false" text="Submit" onAction="#submitMovie"/>
    </children>
</AnchorPane>
